<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online_Rezervacija_Restorana</title>
    <base href="/">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/global.css" />
    <link rel="stylesheet" href="~/css/test.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/js/form-validation.js"></script>


    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@


    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="containernavbar">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Online_Rezervacija_Restorana</a>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a id="navbutton" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a id="navbutton" class="nav-link text-dark" asp-area="" asp-controller="Reservation" asp-action="Index">Reserve</a>
                        </li>
                        <li class="nav-item">
                            <a id="navbutton" class="nav-link text-dark" asp-area="" asp-controller="Reservation" asp-action="UserReservation" asp-route-id="1">My Reservations</a>
                        </li>
                        <li class="nav-item">
                            <a id="navbutton" class="nav-link text-dark" asp-area="" asp-controller="Restaurant" asp-action="CreateRestaurant">Create a Restaurant</a>
                        </li>
                        <li class="nav-item">
                            <a id="navbutton" class="nav-link text-dark" asp-area="" asp-controller="AdminPanel" asp-action="AdminPanelUsers" asp-route-id="1">Admin Panel</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="containerfooter">
            &copy; 2019 - Online_Rezervacija_Restorana - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    

    @RenderSection("Scripts", required: false)
</body>
</html>
